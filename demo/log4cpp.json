{
  "layout_pattern": "${yyyy}-${MM}-${dd} ${HH}:${mm}:${ss}:${ms} [${8TN}] [${L}] -- ${W}",
  "Appenders": {
	"consoleAppender": {
	  "outStream": "stdout"
	},
	"fileAppender": {
	  "filePath": "log/log4cpp.log"
	},
	"tcpAppender": {
	  "localAddr": "0.0.0.0",
	  "port": 9443
	},
	"udpAppender": {
	  "localAddr": "0.0.0.0",
	  "port": 9443
	}
  },
  "layouts": [
	{
	  "name": "consoleLayout",
	  "logLevel": "info",
	  "Appenders": [
		"consoleAppender",
		"tcpAppender",
		"udpAppender"
	  ]
	},
	{
	  "name": "fileLayout",
	  "logLevel": "warn",
	  "Appenders": [
		"fileAppender"
	  ]
	}
  ],
  "rootLayout": {
	"logLevel": "info",
	"Appenders": [
	  "consoleAppender",
	  "fileAppender",
	  "tcpAppender",
	  "udpAppender"
	]
  }
}