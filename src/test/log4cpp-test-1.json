{
  "layout_pattern": "${yyyy}-${MM}-${dd} ${hh}:${mm}:${ss}:${ms} [${8TH}] [${L}] -- ${W}",
  "Appenders": {
    "consoleAppender": {
      "outStream": "stdout"
    },
    "fileAppender": {
      "filePath": "log/log4cpp-test-1.log"
    },
    "tcpAppender": {
      "localAddr": "0.0.0.0",
      "port": 9443
    },
    "udpAppender": {
      "localAddr": "0.0.0.0",
      "port": 9443
    }
  },
  "layouts": [
    {
      "name": "consoleLayout",
      "logLevel": "info",
      "Appenders": [
        "consoleAppender",
        "tcpAppender",
        "udpAppender"
      ]
    },
    {
      "name": "fileLayout",
      "logLevel": "info",
      "Appenders": [
        "consoleAppender",
        "fileAppender",
        "tcpAppender",
        "udpAppender"
      ]
    }
  ],
  "rootLayout": {
    "logLevel": "info",
    "Appenders": [
      "fileAppender",
      "tcpAppender",
      "udpAppender"
    ]
  }
}