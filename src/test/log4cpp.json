{
	"layoutPattern": "${yyyy}-${MM}-${dd} ${HH}:${mm}:${ss}:${ms} [${8TN}] [${L}] -- ${W}",
	"appenders": {
		"consoleAppender": {
			"outStream": "stdout"
		},
		"fileAppender": {
			"filePath": "log/log4cpp.log"
		},
		"tcpAppender": {
			"localAddr": "0.0.0.0",
			"port": 9443
		},
		"udpAppender": {
			"localAddr": "0.0.0.0",
			"port": 9443
		}
	},
	"layouts": [
		{
			"name": "consoleLayout",
			"logLevel": "info",
			"appenders": [
				"consoleAppender",
				"tcpAppender",
				"udpAppender"
			]
		},
		{
			"name": "fileLayout",
			"logLevel": "warn",
			"appenders": [
				"fileAppender"
			]
		}
	],
	"rootLayout": {
		"logLevel": "info",
		"appenders": [
			"consoleAppender",
			"fileAppender",
			"tcpAppender",
			"udpAppender"
		]
	}
}